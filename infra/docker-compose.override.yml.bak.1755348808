services:
  php:
    volumes:
      - ./storage:/var/www/html/storage
      - ./public:/var/www/html/public
    healthcheck:
      test: ["CMD", "php", "-v"]
      interval: 30s
      timeout: 5s
      retries: 3

  worker:
    image: infra-php
    depends_on:
      - redis
      - mysql
    working_dir: /var/www/html
    # Монтируем весь проект (ro), а storage/public — rw
    volumes:
      - .:/var/www/html:ro
      - ./storage:/var/www/html/storage
      - ./public:/var/www/html/public
    command: sh -lc 'cd /var/www/html && php artisan queue:work --sleep=3 --tries=3 --max-time=3600'
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "cd /var/www/html && [ -f artisan ] || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3

  caddy:
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
      - ./public:/srv/public:ro
      - caddy_data:/data
      - caddy_config:/config
    healthcheck:
      test: ["CMD", "wget", "-qO-", "http://localhost/health"]
      interval: 30s
      timeout: 5s
      retries: 3

volumes:
  caddy_data:
  caddy_config:
